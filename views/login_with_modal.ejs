<div class="modal fade"  id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="width: 	38%;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign up for SulvoX Account!</h4>
      </div>
      <div class="modal-body">
        <!-- Modal Body -->
         <div class="grid-body no-border" style="width: 90%;"> <br>
		 <form id="signup-form" class="login-form" action="signup" method="post">
		 <div class="row">
		 <div class="form-group">
            <label class="form-label">Email</label>
            <div class="controls">
				<div class="input-with-icon  right">                                       
					<i class="icon-user"></i>
					<input type="text" name="email" id="email" class="form-control">                                 
				</div>
            </div>
          </div>
          </div>
		  <div class="row">
          <div class="form-group">
            <label class="form-label">Password</label>
            <span class="help"></span>
            <div class="controls">
				<div class="input-with-icon  right">                                       
					<i class="icon-suitcase"></i>
					<input type="password" name="pass" id="pass" class="form-control">                                 
				</div>
            </div>
          </div>
          </div>
		 
          <div class="row">
            <div class="col-md-10">
              <button class="btn btn-primary btn-cons pull-right" type="submit">SignUp</button>
               <button class="btn btn-danger btn-cons pull-right" data-dismiss="modal">Cancel</button>
            </div>
          </div>
		  </form>
        </div>
        <!-- Modal Body End -->
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

		   
        </div>
        
        <div class="col-md-5 "> <br>
		 <form id="login-form" class="login-form" action="login" method="post">
         <div id="loginStatus">
            
                 <% if(message.length > 0) {%>
                    <div class = 'alert alert-danger'>
                         <%= message %>
                    </div>
                     
                 <% } %>     
         </div>
		 <div class="row">
		 <div class="form-group col-md-10">
            <label class="form-label">Email</label>
