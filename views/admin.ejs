<body class="error-body no-top">
<div class="container">
    <div id = "emailRow" class = "row separation">
        <div class = "col-md-6">
            <div id = "emailformStatus">
            </div>
           <form id = "emailform" action = "getUser" role="form">
               <div class="form-group">
                   <label class="sr-only" for="email">Email address</label>
                   <input type="email" name = "email" class="form-control" id="email" placeholder="Enter email">                 </div>
               <button type="submit" class="btn btn-success">Sign in</button>
            </form>
        </div>
    </div>
    
     <div id = "createUserRow" class = "row">
        <div class = "col-md-12">
            <div class="grid simple">
            <div class="grid-title no-border">
              <h4>Create <span class="semi-bold">New User</span></h4>
              <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body no-border">
			<form class="createUserForm" id="createUserForm" action = "createUser" novalidate="novalidate">	
              <div class="row column-seperation">
                <div class="col-md-6">
                  <h4>Personal Information</h4>            
                    <div class="row form-row">
                      <div class="col-md-5">
                        <input name="firstName" id="firstName" type="text" class="form-control" placeholder="First Name">
                      </div>
                      <div class="col-md-7">
                        <input name="lastName" id="lastName" type="text" class="form-control" placeholder="Last Name">
                      </div>
                    </div>
                  
                    <div class="row form-row">
                      <div class="col-md-12">
                        <input name="email1" id="email1" type="email" class="form-control" placeholder="email@address.com">
                      </div>
                    </div>
                    
                      <div class="row form-row">
                      <div class="col-md-12">
                        <input name="pass1" id="pass1" type="password" class="form-control" placeholder="Password">
                      </div>
                    </div>
                    
                      <div class="row form-row">
                      <div class="col-md-12">
                        <input name="pass2" id="pass2" type="password" class="form-control" placeholder="Password">
                      </div>
                    </div>
                    
                     <div class="row form-row">
                      <div class="col-md-4">
                        <input name="countryCode" id="countryCode" type="text" class="form-control" placeholder="+94">
                      </div>
                      <div class="col-md-8">
                        <input name="phoneNumber" id="phoneNumber" type="text" class="form-control" placeholder="Phone Number">
                      </div>
                    </div>
                    
                </div>
                <div class="col-md-6">
				
                  <h4>Account Information</h4>
                  
                    <div class="row form-row">
                      <div class="col-md-12">
                        <input name="url" id="url" type="text" class="form-control" placeholder="URL">
                      </div>
                    </div>
                    
                     <div id = "addTagsDiv" class="row form-row">
                      <div class="addTagDiv top">
                       <div class="col-md-3">
                        <input name="adURL" id="adURL" type="text" class="form-control" placeholder="+Ad URL">
                      </div>
                      <div class="col-md-8">
                        <input name="adTAGS" id="adTAGS" type="text" class="form-control" placeholder="Ad Tags">
                      </div>
                          <div class = "col-md-1 links">
                               <a href = "javascript:addElement();" class="addMore topanchor"> add</a>
                          </div>
                         
                          
                      </div>
                     </div>
                    
                    
                    <div class="row form-row">
                      <div class="col-md-12">
                        <input name="revShare" id="revShare" type="text" class="form-control" placeholder="Revenue Share">
                      </div>
                     </div>
                   
                   
                   
                    <div class="row small-text">
					<p class="col-md-12">
					NOTE - Give comma separated values for filling the Ad Tags associated with URL.
					</p>
					</div>
             
                </div>
              </div>
				<div class="form-actions">
					<div class="pull-right">
					  <button class="btn btn-danger btn-cons" type="submit"><i class="icon-ok"></i> Save</button>
					  <button class="btn btn-white btn-cons" type="button">Cancel</button>
					</div>
				  </div>
			</form>
            </div>
          </div>
        </div>
    </div>
</div>
