<body class="error-body no-top">
<div class="container">
  <div class="lockscreen-wrapper animated  flipInX">
  <div class="row ">
    <div id="content" class="col-md-6 col-md-offset-4 col-sm-6 col-sm-offset-4 col-xs-offset-2">
        <div class="grid">
            <div class="grid-title">
                <h4>Password Reset Form!</h4>
            </div>
            <div class="grid-body">
                <form id = "resetPassForm" action = "savePassword" role="form">
                    <div id = "resetPassStatus">     
                    </div>
                    <input type="hidden" name="email" id="email" value="<%= email %>" class="form-control"> 
                    <div class="form-group">
                        <label>Enter the New Password</label>
                        <input type="password" name="pass1" id="pass1" class="form-control"> 
                    </div>
                     <div class="form-group">
                        <label>Retype the New Password again</label>
                        <input type="password" name="pass2" id="pass2" class="form-control"> 
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
   </div>
  </div>
